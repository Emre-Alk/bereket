<% if asso.errors.any? %>
  <div class="mb-5 rounded-lg p-2 text-sm italic bg-yellow-100">
    <ul class="list-disc list-inside space-y-1">
      <% asso.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <%end%>
    </ul>
  </div>
<%end%>

<%= form_with model: [asso] do |f| %>
  <div class="flex flex-col gap-y-5">
    <div class="flex flex-col gap-y-2">
      <%= f.label :name, "Nom d'enregistrement de votre association" %>
      <%= f.text_field :name %>
    </div>

    <div class="flex flex-col gap-y-2">
      <%= f.label :email, "Email d'enregistrement de votre association" %>
      <%= f.text_field :email, placeholder: "ex.: xyz@xyz.com" %>
    </div>

    <div class="flex flex-col gap-y-2">
      <%= f.label :code_nra, "NumÃ©ro NRA de votre association" %>
      <%= f.text_field :code_nra, placeholder: "ex.: W123456789" %>
    </div>

    <div class="flex flex-col gap-y-2">
      <%= f.label :objet, "Objet d'enregistrement de votre association" %>
      <%= f.text_area :objet, size: "70x5" %>
    </div>

    <div class="flex flex-col gap-y-2">
        <%= f.label :asso_type_id, value: "Indiquez le type d'associtation" %>
      <div class="overflow-x-clip">
        <%= f.collection_select :asso_type_id, AssoType.all, :id, :name, prompt: true %>
      </div>
    </div>

    <div class="mt-4 px-1 py-3 bg-black w-full text-white text-center text-lg tracking-widest rounded-lg">
      <%= f.submit 'Enregistrer' %>
    </div>

  </div>
<% end %>
