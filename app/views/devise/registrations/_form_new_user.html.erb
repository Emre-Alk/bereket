  <div class="grid md:grid-cols-2 md:gap-6 mt-5">
    <div class="field relative z-0 w-full mb-5 group">
      <%= f.text_field :first_name, value: donator&.first_name, class: "block py-2.5 px-0 w-full text-base text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-black peer invalid:text-red-500 invalid:focus:border-red-500 invalid:border-red-500", placeholder: ' ' %>
