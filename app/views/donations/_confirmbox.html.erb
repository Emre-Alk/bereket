  <div class="flex flex-col gap-2 w-full shadow-inner rounded-lg bg-neutral-100 px-4 py-1">
    <div class="flex flex-row justify-between items-center ">
      <span>Déduction d'impôt éligible</span>
      <span id='discount' class="text-lg tracking-wider"></span>
    </div>

    <div class="flex flex-row justify-between items-center ">
      <span>Ce don vous reviendrait net</span>
      <span id='net' class="text-lg tracking-wider"></span>
    </div>
  </div>

  <div class="mb-2 w-full flex flex-row gap-10 justify-center items-center">

    <form action="/places/<%=place.id%>/checkout" method="POST" data-turbo="false" class="w-1/2">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
      <input type="hidden" name="place_id" value="<%= place.id %>">
      <input type="hidden" name="amount" data-donation-target="monDon">
      <button type="submit" class="w-full py-2.5 bg-black rounded-xl flex flex-col justify-evenly items-center">
        <%= image_tag("gift_icon.svg", class:"scale-100") %>
        <div class="flex flex-row gap-2 justify-evenly items-center">
          <span class="text-white">Donner</span>
          <div data-donation-target="monDon" class="roboto-medium text-xl text-white"></div>
        </div>
      </button>
    </form>

    <button class="w-1/2 h-full bg-zinc-300 rounded-xl flex flex-col justify-evenly py-2.5 items-center" data-action="click->donation#cancelTip">
      <%= image_tag("cross_icon.svg", class:"scale-100") %>
      <span>Annuler</span>
    </button>
  </div>

