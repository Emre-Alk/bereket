<%= render partial: "donators/navbar", locals: {donator: @donator} %>

<!--header - start -->
<div class="fixed top-0 inset-x-0 bg-neutral-100">
  <div class="flex flex-row justify-end items-center pl-7 pr-7 pt-6 pb-2">
    <!-- nav - start -->
    <button data-controller="navbar" data-action="click->navbar#ouvre">
      <%= icon("fa-solid", "bars", class:"fa-lg")%>
    </button>
    <!-- nav - end -->
  </div>
</div>
<!--header - end -->

<!--section - start -->
<div class="flex flex-col pt-10 pb-4 gap-y-4">

  <!--welcoming - start -->
  <div class="flex justify-start">
    <p class="roboto-regular tracking-wide text-4xl">Bonjour <%= @donator.first_name.capitalize %>,</p>
  </div>
  <!--welcoming - end -->

  <!--indicateur - start -->
  <div data-controller="carousel" class="relative flex flex-row justify-start bg-white h-max w-full px-2 py-8 rounded-lg shadow-[0_0_12px_1px_rgba(0,0,0,0.1)]">

    <div class="flex w-2/3">
      <div data-carousel-target="total" class="w-full flex flex-col items-start space-y-4 pl-10">
        <p >Total brut dons:</p>
        <p class="roboto-medium text-5xl mr-5"><%= number_to_currency(@total.to_f / 100, locale: :fr, strip_insignificant_zeros: true) %></p>
      </div>

      <div data-carousel-target="net" class="hidden w-full flex-col items-start space-y-4 pl-10">
        <p >Total net dons:</p>
        <p class="roboto-medium text-5xl"><%= number_to_currency(@total_net.to_f / 100, locale: :fr, strip_insignificant_zeros: true) %></p>
      </div>

      <div data-carousel-target="reduction" class="hidden w-full flex-col items-start space-y-4 pl-10">
        <p >Réductions cumulées:</p>
        <p class="roboto-medium text-5xl"><%= number_to_currency(@total_discount.to_f / 100, locale: :fr, strip_insignificant_zeros: true) %></p>
      </div>
    </div>

    <div class="absolute inset-y-0 right-2 flex flex-col gap-y-2 justify-center items-end text-xs w-1/3">
      <button data-action="carousel#toggle" id="total" data class="active w-4/5 px-3 py-2 rounded-lg bg-black text-white">Total</button>
      <button data-action="carousel#toggle" id="net" class="w-4/5 px-3 py-2 rounded-lg bg-neutral-300 text-black">Net</button>
      <button data-action="carousel#toggle" id="reduction" class="w-4/5 px-3 py-2 rounded-lg bg-neutral-300 text-black">Réductions</button>
    </div>

  </div>
  <!--indicateur - end -->

  <!--favoris - start -->
  <div>
    <p class="roboto-thin text-slate-800 text-base">Mes Favoris</p>
    <div class="bg-white flex flex-row justify-start items-center h-32 gap-x-2 p-1 rounded-lg overflow-x-auto text-center shadow-[0_0_12px_1px_rgba(0,0,0,0.1)]">
      <!--start-->
      <% if @favorites.empty? %>
        <div>Vous n'avez pas encore ajouter de favori</div>
      <% else %>
        <% @favorites.each do |favorite| %>
          <div class="bg-white flex flex-col justify-evenly items-center gap-y-1 min-w-24 min-h-24">
            <% if favorite.place.place_image.attached? %>
              <%= image_tag(favorite.place.place_image, class:'size-14 rounded-full') %>
            <% else %>
              <%= image_tag("default_avatar.png", class:"size-14 rounded-full") %>
            <% end %>
            <p class="w-full text-sm text-wrap"><%= favorite.place.name %></p>
          </div>
        <% end %>
      <% end %>
        <!--end-->
    </div>
  </div>
  <!--favoris - end -->

  <!--derniers dons - start -->
    <div>
      <p class="roboto-thin text-slate-800 text-base">Derniers dons</p>
      <div class="bg-white flex flex-col h-64 gap-2 divide-y divide-black/30 rounded-lg p-1 overflow-y-auto shadow-[0_0_12px_1px_rgba(0,0,0,0.1)] shadow-black/10">
        <!--start-->
        <%= render partial: "shared/donations", locals: {donations: @sorted_donations, size: 10} %>
        <!--end-->
      </div>
    </div>
  <!--derniers dons - end -->


  <!--button scan - start -->
  <%= render partial: "donators/scan"%>
  <!--button scan - end -->
</div>
<!--section - end -->
