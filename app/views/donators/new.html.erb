<%= form_with model: [@donator] do |f| %>
  <div class="flex flex-col gap-y-5">
    <div class="flex flex-col gap-y-2">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="flex flex-col gap-y-2">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

    <div class="flex flex-col gap-y-2">
      <%= f.label :profile_image %>
      <%= f.file_field :profile_image %>
    </div>

    <div class="mt-4 px-1 py-3 bg-black w-full text-white text-center text-lg tracking-widest rounded-lg">
      <%= f.submit "Enregistrer" %>
    </div>
  </div>
<% end %>
