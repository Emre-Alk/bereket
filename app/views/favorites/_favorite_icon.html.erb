<div class="w-fit" data-controller="favorite" data-favorite-donator-id-value="<%= donator.id %>" data-favorite-place-id-value="<%= place.id %>" data-favorite-fav-value="<%= favorite.to_json %>" data-action="click->favorite#actuate" data-favorite-target="heart" >
  <% if place.is_favorite_of?(donator) %>
    <%= icon("fa-solid", "heart", style:"color: red", class:"fa-xl", id:"heart") %>
  <% else %>
    <%= icon("fa-regular", "heart", class:"fa-xl", id:"heart") %>
  <% end %>
</div>
