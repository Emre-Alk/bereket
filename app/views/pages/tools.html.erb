      <span class="absolute right-2 top-2 text-green-500">
        <%= icon('fa-solid', 'circle-check', class:'fa-lg') %>
      </span>
      <%= icon('fa-regular', 'file', class:'fa-2x') %>
      <figcaption class="text-sm">
        Cerfa
      </figcaption>
    </figure>
  <% end %>

  <%# card of a tool %>
  <%= link_to '#', class:"text-center rounded-md shadow-md bg-white h-32 w-full" do %>
