<!-- Scrollable PDF Viewer Container -->
<iframe
  src="<%= @pdf_url %>#toolbar=0"
  class="w-full h-screen"
  style="border: none;"
  scrolling="no"
></iframe>

<script>
  $("#iframe").contents().find("body").css({
      "height": "100%",
      "overflow": "auto",
      "-webkit-overflow-scrolling": "touch"
    });
</script>
