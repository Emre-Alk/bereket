  <% if !flash.empty? %>
    <% flash.each do |type, msg| %>
      <div data-controller ="flash" data-flash-target="flash" class=" alert-<%= type %> fixed top-1/3 z-50 inset-x-5 h-fit p-5 rounded-lg tracking-wide transition-opacity duration-1000 ease-out opacity-70 ">
        <%= msg %>
      </div>
    <% end %>
  <% end %>
